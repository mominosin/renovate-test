{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "enabled": true,
      "groupName": "others",
      "matchPackagePatterns": [
        "*"
      ],
      "separateMajorMinor": false
    }
  ],
  "postUpdateOptions": ["gomodTidy"],
  "gomod": {
      "enabled": true
  },
  "vulnerabilityAlerts": {
    "groupName": "security",
    "enabled": true,
    "commitMessageSuffix": "[SECURITY]",
    "labels": [
      "security",
      "security_2"
    ]
  }
}
